@model IEnumerable<checkpointIdentity.Models.Product>

@{
    ViewData["Title"] = "Index";
}



<h1>List of products:</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<section class="container-fluid d-flex flex-wrap">
    @{ foreach (var item in Model)
        {
            <div class="card m-3 " style="width: 18rem; height:max-content">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"> @Html.DisplayNameFor(model => model.AdTitle):  @Html.DisplayFor(modelItem => item.AdTitle)  </h5>
                    <p class="card-text"> @Html.DisplayNameFor(model => model.Content) :  @Html.DisplayFor(modelItem => item.Content)</p>
                    <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-primary">Details</a>
                </div>
                <div class="card-footer">
                    <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                </div>
            </div>
        }
    }
</section>
